{
  "compilerOptions": {
    "strict": true,
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,
    "checkJs": false,
    "baseUrl": "src",
    "rootDir": "src",
    "outDir": "dist",
    "paths": {
      "@/*": ["*"]
    },
    "jsx": "react-jsx"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "postcss.config.js", "tailwind.config.js", "vite.config.js", "vite.config.ts"]
}
